<!DOCTYPE html>
<html>

<head>
    <title>Edit Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <h1 class="text-center">Edit Product</h1>
        <form action="/products/<%= product._id %>" method="post" enctype="multipart/form-data">
            <label for="name">Name:</label>
            <input class="form-control" placeholder="Enter Your Name" type="text" name="name" id="name" value="<%= product.name %>" required><br>
            <label for="category">Category:</label>
            <select class="form-control" name="category" id="category">
            <% categories.forEach(category => { %>
                <option value="<%= category._id %>" <%= category._id.equals(product.category._id) ? 'selected' : '' %>><%= category.name %></option>
            <% }) %>
        </select><br>
            <label for="description">Description:</label>
            <textarea class="form-control" placeholder="Enter Youe Description" name="description" id="description"><%= product.description %></textarea><br>
            <label for="price">Price:</label>
            <input class="form-control" placeholder="Enter Youe Price" type="number" name="price" id="price" value="<%= product.price %>" step="0.01" required><br>
            <label for="images">Images:</label>
            <input class="form-control" type="file" name="images" id="images" multiple><br>
            <button class="btn btn-warning" type="submit">Update Product</button>
        </form>
        <a class="btn btn-primary" href="/products">Back to Products</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>

</html>